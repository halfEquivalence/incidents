<%- include layouts/navigation.ejs %>
<!-- Main Content -->
<% if (user != null)  { %>
<main>
    <a href="incidents/new">
        <button style="width: 100%;  border-radius: 16px; font-size: 25px;"> 
            Create Incident
        </button>
    </a>

    <h2><%= title %></h2>
    
    <table style="width: auto;">
        <!-- Header Row-->
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Priority</th>
            <th></th>
            <th></th>
        </tr>

        <!-- Repeatable Template Row -->
        <% for(let count = 0; count < incidentsData.length; count++) { %>
            <tr>
                <td><%= incidentsData[count].title %></td>
                <td><%= incidentsData[count].description %></td>
                <td><%= incidentsData[count].priority %></td>
                <td>
                    <a href="/incidents/<%= incidentsData[count]._id %>/edit">Edit</a>
                </td>
                <td>
                    <a href="/incidents/<%= incidentsData[count]._id %>/delete">Delete</a>
                </td>
            </tr>
        <% } %>
    </table>
</main>
<% } %>
